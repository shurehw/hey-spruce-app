# OpenWrench API Configuration
OPENWRENCH_API_KEY=your_openwrench_api_key
OPENWRENCH_KEY=your_openwrench_key
OPENWRENCH_API_URL=https://api.openwrench.com

# Stripe Configuration
# Use test keys for development (sk_test_..., pk_test_...)
# Use live keys for production (sk_live_..., pk_live_...)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Application Settings
NODE_ENV=production
PORT=3000

# Your deployed URL (update after deployment)
APP_URL=https://your-app.vercel.app

# Email Configuration (Choose one: SendGrid or SMTP)
# SendGrid (Recommended - easier setup)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@heyspruce.com

# OR SMTP (Gmail, Outlook, or other SMTP server)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password