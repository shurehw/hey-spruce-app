  "file_handlers": [
    {
      "action": "/handle-photo",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+heyspruce",
      "url": "/subcontractor-app.html?action=%s"
    }
  ],
  "share_target": {
    "action": "/share-photo",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/jpeg", "image/png", "image/webp"]
        }
      ]
    }
  },
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://partners.useopenwrench.com/"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
